# this gives access to the mpich header files
prefix=/home/kaitykoo122/wrf_dependencies/mpich
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include

Name: mpich
Description: High Performance and portable MPI
Version: 3.0.4
URL: http://www.mcs.anl.gov/research/projects/mpich
Requires:
Libs:  -L/home/kaitykoo122/wrf_dependencies/netcdf/lib -L/home/kaitykoo122/wrf_dependencies/grib2/lib  -L${libdir}  -lmpich -lopa -lmpl  -lpthread -lnetcdf -lz 
Cflags: -I/home/kaitykoo122/wrf_dependencies/netcdf/include -I/home/kaitykoo122/wrf_dependencies/grib2/include -fcommon    -I${includedir}

# pkg-config does not understand Cxxflags, etc. So we allow users to
# query them using the --variable option

cxxflags=-I/home/kaitykoo122/wrf_dependencies/netcdf/include -I/home/kaitykoo122/wrf_dependencies/grib2/include -fcommon    -I${includedir}
fflags=-m64 -fallow-argument-mismatch  -I${includedir}
fcflags=-m64 -fallow-argument-mismatch  -I${includedir}
